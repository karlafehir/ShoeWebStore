@model ProductViewModel

<div class="card shadow border-0 mt-4">
    <div class="card-header bg-secondary bg-gradient m-lg-0 py-3">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="text-dark py-2">
                    @(Model.Product.Id != 0 ? "Edit" : "Create") Product
                </h2>
            </div>
        </div>
    </div>
    <div class="card-body p-4">
        <form method="post">
            @* id zbog edita *@
            <input asp-for="Product.Id" hidden/>
            <div class="row">
                <div class="col-10">
                    <div class="border p-3">
                        <div class="form-floating py-2 col-12">
                            <input asp-for="Product.Name" class="form-control border-0"/>
                            <label asp-for="Product.Name"></label>
                            <span asp-validation-for="Product.Name" class="text-danger"></span>
                        </div>

                        <div class="form-floating py-2 col-12">
                            <input asp-for="Product.Description" class="form-control border-0"/>
                            <label asp-for="Product.Description"></label>
                            <span asp-validation-for="Product.Description" class="text-danger"></span>
                        </div>


                        <div class="form-floating py-2 col-12">
                            <input asp-for="Product.Brand" class="form-control border-0"/>
                            <label asp-for="Product.Brand"></label>
                            <span asp-validation-for="Product.Brand" class="text-danger"></span>
                        </div>

                        <div class="form-floating py-2 col-12">
                            <input asp-for="Product.Color" class="form-control border-0"/>
                            <label asp-for="Product.Color"></label>
                            <span asp-validation-for="Product.Color" class="text-danger"></span>
                        </div>

                        <div class="form-floating py-2 col-12">
                            <input asp-for="Product.Gender" class="form-control border-0"/>
                            <label asp-for="Product.Gender"></label>
                            <span asp-validation-for="Product.Gender" class="text-danger"></span>
                        </div>

                        <div class="form-floating py-2 col-12">
                            <input asp-for="Product.Material" class="form-control border-0"/>
                            <label asp-for="Product.Material"></label>
                            <span asp-validation-for="Product.Material" class="text-danger"></span>
                        </div>

                        <div class="form-floating py-2 col-12">
                            <input type="number" step=".01" asp-for="Product.Price" class="form-control border-0"/>
                            <label asp-for="Product.Price"></label>
                            <span asp-validation-for="Product.Price" class="text-danger"></span>
                        </div>

                        <div class="form-floating py-2 col-12">
                            <input type="number" asp-for="Product.StockQuantity" class="form-control border-0"/>
                            <label asp-for="Product.StockQuantity"></label>
                            <span asp-validation-for="Product.StockQuantity" class="text-danger"></span>
                        </div>

                        <div class="form-floating py-2 col-12">
                            <select asp-for="@Model.Product.CategoryId" asp-items="@Model.CategoryList" class="form-select border-0 shadow">
                                <option disabled select>--Select Category---</option>
                            </select>
                        </div>

                        <div class="row pt-2">
                            <div class="col-6 col-md-3">
                                @if (Model.Product.Id != 0)
                                {
                                    <button type="submit" class="btn btn-primary form-control"> Edit</button>
                                }
                                else
                                {
                                    <button type="submit" class="btn btn-primary form-control">Create</button>
                                }
                            </div>
                            <div class="col-6 col-md-3">
                                <a asp-controller="Product" asp-action="Index" class="btn btn-outline-primary border form-control">
                                    Back to list
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        <partial name="_ValidationScriptsPartial"/>
    }
}